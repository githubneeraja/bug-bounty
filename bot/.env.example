# Recon Bot Environment Configuration Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# ============================================
# SHODAN API Configuration
# ============================================
# Get your API key from: https://www.shodan.io/account/profile
SHODAN_API_KEY=your_shodan_api_key_here

# ============================================
# CENSYS API Configuration
# ============================================
# Get credentials from: https://censys.io/account/api
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here

# ============================================
# Make.com Webhook Configuration
# ============================================
# Your Make.com webhook URL for receiving recon results
MAKE_WEBHOOK_URL=https://hook.make.com/your_webhook_path

# ============================================
# Output Configuration
# ============================================
# Directory for saving recon results
OUTPUT_DIR=./results

# Enable verbose logging
DEBUG_MODE=false

# ============================================
# Recon Targets (Optional)
# ============================================
# Comma-separated list of domains/IPs to scan
TARGET_DOMAINS=example.com,target.org
TARGET_IPS=192.168.1.1,10.0.0.1

# ============================================
# Scan Configuration
# ============================================
# Maximum results per query
MAX_RESULTS=100

# Timeout for API requests (seconds)
REQUEST_TIMEOUT=30

# Retry attempts for failed requests
RETRY_ATTEMPTS=3

